{
  "res:namespace": "assets::app",

  "debug_font_file":
  {
    "res:type": "font_file",
    "file": "file:debug_font.ttf"
  },

  "debug_font":
  {
    "res:type": "font",
    "data": "ref:debug_font_file",
    "size": 10
  },

  "ff.debug_page_input":
  {
    "res:type": "input",
    "events":
    {
      "toggle_debug": "control+f8",
      "custom_debug": "shift+f8"
    }
  },

  "ff.game.debug_input":
  {
    "res:type": "input",
    "events":
    {
      "ff.game.cancel_step_one_frame": [ "escape", "tilde" ],
      "ff.game.step_one_frame": { "action": "1", "repeat": 0.25 }
    },
    "values":
    {
      "ff.game.speed_slow": "2",
      "ff.game.speed_fast": "3"
    }
  }
}
